<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.CoffeeMemos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/normal_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige_light</item>
        <item name="colorSecondaryVariant">@color/beige_dark</item>
        <item name="colorOnSecondary">@color/normal_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#FFFFFF</item>
        <!-- Customize your theme here. -->

        <!-- ステータスバーの文字色を黒に変更 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ライセンス画面のテーマ -->
    <style name="licenseTheme" parent="Theme.AppCompat.DayNight"/>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <!-- バー上のタイトルの色 -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <!-- バー上のアイコンの色 -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- バーを浮いたように見せる -->
        <item name="android:elevation">4dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/normal_rating_progress</item>
        <item name="colorControlActivated">@color/active_rating_progress</item>
    </style>


    <!-- レシピ新規作成画面  -->
    <style name="NewRecipeInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#6D6D6D</item>
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="starStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>


   <!-- レシピ詳細画面   -->
    <style name="recipeDetailRecipeItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="recipeDetailRecipeItemValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="recipeDetailStar">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_marginStart">13dp</item>
    </style>

    <style name="ratingStarLarge">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>


    <!-- テイスト編集画面   -->
    <style name="tasteItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tasteValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/beige_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="mEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- コーヒー豆編集画面   -->
    <style name="edit_bean_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <!-- レシピ新規作成画面   -->
    <style name="tasteEditTextStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:hint">3</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
    </style>
    <style name="validationMessageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/validation_color</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:visibility">gone</item>
    </style>


    <!-- 検索関連   -->
    <style name="searchHeaderBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>


    <!-- ホーム画面   -->
    <style name="homeCardTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="homeCardTagStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/brown_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>
</resources>