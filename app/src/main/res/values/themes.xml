<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoffeeMemos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#726E77</item>
        <item name="colorPrimaryVariant">#555454</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <!-- バー上のタイトルの色 -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <!-- バー上のアイコンの色 -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- バーを浮いたように見せる -->
        <item name="android:elevation">4dp</item>
    </style>


    <style name="NewRecipeInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#6D6D6D</item>
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="hintTextAppearance">@style/Sample</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="Sample" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="EditText.Boxed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Sample</item>
    </style>

    <style name="EditTextHint" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textColor">#6D6D6D</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textInputLayoutStyle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>