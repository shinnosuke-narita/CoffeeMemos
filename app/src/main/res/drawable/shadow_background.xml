<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="10dp" />
            <gradient
                android:angle="300"
                android:startColor="#59E3E3E3"
                android:endColor="#48D8D8D8"
               />
        </shape>
    </item>
    <item
        android:top="1dp"
        android:left="1dp"
        android:bottom="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
