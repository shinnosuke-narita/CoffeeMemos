                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Bean"
                android:textSize="25sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/processSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:prompt="@string/prompt"
                android:spinnerMode="dialog"
                android:background="@drawable/spinner_background_shape"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beanTitle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                app:tint="#7E7878"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@+id/processSpinner"
                app:layout_constraintBottom_toBottomOf="@+id/processSpinner"
                app:layout_constraintEnd_toEndOf="@+id/processSpinner"/>

            <EditText
                android:id="@+id/countryInputLayout"
                style="@style/mEditTextStyle"
                android:hint="@string/hint_country"
                android:elevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/processSpinner">
