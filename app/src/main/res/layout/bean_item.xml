<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/beanContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/beanIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/coffee_bean_icon"
            app:tint="@color/taste_section_text_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/rvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/beanIcon"
            app:layout_constraintTop_toTopOf="@+id/beanIcon"
            app:layout_constraintBottom_toBottomOf="@+id/beanIcon"
            android:layout_marginStart="10dp"
            tools:text="ブラジル"/>

        <TextView
            android:id="@+id/rvFarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/beanIcon"
            app:layout_constraintStart_toStartOf="@+id/beanIcon"
            tools:text="パブロベラスケス農園"/>

        <TextView
            android:id="@+id/rvDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rvFarm"
            app:layout_constraintStart_toStartOf="@+id/beanIcon"
            tools:text="マドリス地区"/>

        <ImageView
            android:id="@+id/mountainIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/mountain_icon"
            app:tint="@color/taste_section_text_color"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/beanIcon"
            app:layout_constraintTop_toBottomOf="@+id/rvDistrict"/>

        <TextView
            android:id="@+id/rvElevationFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/mountainIcon"
            app:layout_constraintTop_toTopOf="@+id/mountainIcon"
            app:layout_constraintBottom_toBottomOf="@+id/mountainIcon"
            android:layout_marginStart="10dp"
            tools:text="1800m"/>

        <TextView
            android:id="@+id/rvWaveLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="~"
            app:layout_constraintStart_toEndOf="@+id/rvElevationFrom"
            app:layout_constraintTop_toTopOf="@+id/mountainIcon"
            app:layout_constraintBottom_toBottomOf="@+id/mountainIcon"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/rvElevationTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/rvWaveLine"
            app:layout_constraintTop_toTopOf="@+id/mountainIcon"
            app:layout_constraintBottom_toBottomOf="@+id/mountainIcon"
            android:layout_marginStart="10dp"
            tools:text="1900m"/>

        <ImageView
            android:id="@+id/storeIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_baseline_store_24"
            app:tint="@color/taste_section_text_color"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/beanIcon"
            app:layout_constraintTop_toBottomOf="@+id/mountainIcon"/>

        <TextView
            android:id="@+id/rvStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/storeIcon"
            app:layout_constraintTop_toTopOf="@+id/storeIcon"
            app:layout_constraintBottom_toBottomOf="@+id/storeIcon"
            android:layout_marginStart="10dp"
            tools:text="谷中珈琲"/>

        <ImageView
            android:id="@+id/processIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/sun_icon"
            app:tint="@color/taste_section_text_color"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/beanIcon"
            app:layout_constraintTop_toBottomOf="@+id/storeIcon"/>

        <TextView
            android:id="@+id/rvProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/processIcon"
            app:layout_constraintTop_toTopOf="@+id/processIcon"
            app:layout_constraintBottom_toBottomOf="@+id/processIcon"
            android:layout_marginStart="10dp"
            tools:text="ナチュラル"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/starWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/processIcon"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/rateIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_star_yellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/rvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="#F5FF16"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/rateIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="3.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>
